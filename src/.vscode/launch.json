    "version": "0.2.0",
    "configurations": [
        {
            "name": "Linq",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Linq/bin/Debug/net6.0/Linq.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "Boilerplate",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Boilerplate/bin/Debug/net6.0/Boilerplate.dll",
            "args": [],
